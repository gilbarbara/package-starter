{
  "name": "@gilbarbara/package-starter",
  "version": "0.2.6",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/gilbarbara/package-starter.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/package-starter/issues"
  },
  "homepage": "https://github.com/gilbarbara/package-starter#readme",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "package-starter": "index.js"
  },
  "files": [
    "index.js",
    "template-*/**",
    "dist"
  ],
  "sideEffects": false,
  "license": "MIT",
  "keywords": [
    "package",
    "template",
    "starter"
  ],
  "devDependencies": {
    "@gilbarbara/eslint-config": "^0.8.8",
    "@gilbarbara/prettier-config": "^1.0.0",
    "@gilbarbara/tsconfig": "^0.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.18.1",
    "@types/prompts": "^2.4.9",
    "del-cli": "^6.0.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "husky": "^9.1.7",
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2",
    "repo-tools": "^0.3.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "npm run clean && tsup",
    "watch": "tsup --watch",
    "clean": "del dist/*",
    "lint": "eslint --fix src",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run build && npm run test",
    "prepare": "husky",
    "prepublishOnly": "npm run validate"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config/base",
      "@gilbarbara/eslint-config/vitest"
    ],
    "rules": {
      "no-console": "off",
      "vitest/consistent-test-it": "off"
    },
    "overrides": [
      {
        "files": [
          "./template-typescript/**/*.ts?(x)",
          "./template-typescript-react/**/*.ts?(x)"
        ],
        "rules": {
          "import/no-unresolved": "off"
        }
      }
    ]
  },
  "prettier": "@gilbarbara/prettier-config",
  "tsup": {
    "dts": true,
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "sourcemap": true,
    "splitting": false,
    "banner": {
      "js": "const require = (await import('node:module')).createRequire(import.meta.url);const __filename = (await import('node:url')).fileURLToPath(import.meta.url);const __dirname = (await import('node:path')).dirname(__filename);"
    }
  }
}
